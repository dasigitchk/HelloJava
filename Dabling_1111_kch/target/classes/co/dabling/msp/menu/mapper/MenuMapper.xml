<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.dabling.msp.menu.mapper.MenuMapper">


<!-- 차후에 가격별,메뉴별,매장별 order by 정렬 수정. -->
<!-- 메뉴 전체조회 -->
	<select id="menuSelectList" resultType="co.dabling.msp.menu.vo.MenuVO">
		SELECT * FROM MENU
	</select>
	
<!-- 메뉴별 전체 조회 -->
	<select id="menuSelect" resultType="co.dabling.msp.menu.vo.MenuVO">
		select * from menu
		where menu_name = #{menuName}
	</select>
	
	
<!-- 매장별메뉴 전체 조회 -->
	<select id="storeMenuSelect" resultType="co.dabling.msp.menu.vo.MenuVO">
		select * from menu
		where store_code = #{storeCode}
	</select>
	
<!-- 메뉴 추가 -->
	<insert id="menuInsert">
		INSERT INTO MENU
		VALUES(#{storeCode},#{menuName},#{menuImage},#{price})
	</insert>
	
<!-- 메뉴 수정 -->
	<update id="menuUpdate">
		UPDATE menu
		set menu_name = NVL(#{menuName},menu_name),
		        menu_image = NVL(#{menuImage},menu_image),
		        price = NVL(#{price},price)
		where menu_name = #{menuName}
	</update>
	
<!-- 메뉴 삭제 -->
	<delete id="menuDelete">
		DELETE MENU
		WHERE MENU_NAME = #{menuName}
	</delete>
	
	
</mapper>

